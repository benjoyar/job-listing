<div class="row user_setup">
  <div class="col-md-4 col-md-offset-4 col-xs-8 col-xs-offset-2 user_setup_content">
    <div class="col-md-10 col-md-offset-1">
      <h2><sapn class="fa fa-sign-in"></sapn> 帐号登入 </h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, :label => false, placeholder: '邮箱', required: false, autofocus: true %>
          <%= f.input :password, :label => false, placeholder: '密码', required: false %>
          <%= f.input :remember_me, :label => "记住我", as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "登入", class: 'btn btn-primary btn-md' %>
        </div>
      <% end %>
      <hr />
      <div class="account">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
