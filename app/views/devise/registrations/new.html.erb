<div class="row user_setup">
  <div class="col-md-4 col-md-offset-4 col-xs-8 col-xs-offset-2 user_setup_content">
    <div class="col-md-10 col-md-offset-1">
      <h2><sapn class="fa fa-user-circle-o"></sapn> 帐号注册</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, :label => false, placeholder: '请输入常用的邮箱地址', error: '请输入邮箱地址', required: true, autofocus: true %>
          <%= f.input :password, :label => false, placeholder: '请输入6-16位密码', error: '请输入6-16位密码', required: true, input_html: { maxlength: 16 }  %>
          <%= f.input :password_confirmation, :label => false, placeholder: '确认密码', error: '请输入相同的密码', required: true, input_html: { maxlength: 16 } %>
          <%= f.input :is_admin, :label => false, as: :radio_buttons, collection:  [['个人用户', false], ['企业用户', true]], required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "注册" , class: 'btn btn-primary btn-md' %>
        </div>
      <% end %>
      <hr />
        <div class="account">
          <%= render "devise/shared/links" %>
        </div>
      </div>
  </div>
</div>
